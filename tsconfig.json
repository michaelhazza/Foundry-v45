{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["client/src/*"],
      "@server/*": ["server/*"]
    }
  },
  "include": ["client/src/**/*", "server/**/*"],
  "exclude": ["node_modules", "dist"]
}
